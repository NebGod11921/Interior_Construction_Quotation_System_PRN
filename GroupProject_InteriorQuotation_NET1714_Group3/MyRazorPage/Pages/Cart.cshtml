@page
@using System.Text.Json
@using Application.ViewModels
@model MyRazorPage.Pages.CartModel

<section class="h-100 h-custom" style="background-color: #eee;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <div class="card shopping-cart" style="border-radius: 15px;">
                    <div class="card-body text-black">

                        <div class="row">
                            <div class="col-lg-6 px-5 py-4">

                                <h3 class="mb-5 pt-2 text-center fw-bold text-uppercase">Your products</h3>
                                @if (Model.carts != null)
                                {
                                    var totalprice = 0f;
                                    @foreach (var item in Model.carts)
                                    {
                                        <div class="d-flex align-items-center mb-5">
                                            <div class="flex-shrink-0">
                                                <img src="@Model.getProductById(item.productId).ImageUrl"
                                                     class="img-fluid" style="width: 150px;" alt="Generic placeholder image">
                                            </div>
                                            <div class="flex-grow-1 ms-3">
                                                <form asp-page-handler="DeleteCart" method="post">
                                                    <input type="hidden" value="@item.Id" name="cID" />
                                                    <button type="submit" class="btn btn-link p-0">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                                <h5 class="text-primary">@Model.getProductById(item.productId).ProductName</h5>
                                                <h6 style="color: #9e9e9e;">Color: @Model.getProductById(item.productId).Color</h6>
                                                <p class="fw-bold mb-0 me-5 pe-3">@Model.getProductById1(item.productId).Categorys.CategoryName</p>
                                                <div class="d-flex align-items-center">
                                                    <p class="fw-bold mb-0 me-5 pe-3">@Model.getProductById(item.productId).Price$</p>
                                                    
                                                    <div class="def-number-input number-input safari_only">
                                                        <form method="post" asp-page-handler="UpdateQuantity">
                                                        <input class="quantity fw-bold text-black" min="1" name="quantity" value="@item.quantity"
                                                               type="number">
                                                        @{
                                                            var price = @item.quantity * @Model.getProductById(item.productId).Price;
                                                            totalprice += price;
                                                        }
                                                        <p>Price: @price$</p>
                                                            <input type="hidden" name="id" value="@item.Id" />
                                                            <button type="submit">Update</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                <hr class="mb-4" style="height: 2px; background-color: #1266f1; opacity: 1;">

                                
                                <div class="d-flex justify-content-between p-2 mb-2" style="background-color: #e1f5fe;">
                                    <h5 class="fw-bold mb-0">Total:</h5>
                                    <h5 class="fw-bold mb-0">@totalprice$</h5>
                                </div>
                                }
                                else
                                {
                                    <p>Not Found In Cart</p>
                                }
                            </div>
                            <div class="col-lg-6 px-5 py-4">

                                <h3 class="mb-5 pt-2 text-center fw-bold text-uppercase">Payment</h3>
                                <form asp-page-handler="Caculator" method="post">
                                    <div class="form-outline mb-5">
                                        <input type="text" id="typeText" name="roomAre" class="form-control form-control-lg" />
                                        <label class="form-label" for="typeText">Room Are</label>
                                    </div>
                                    <button type="submit">Calculator</button>
                                </form>
                                @{
                                    var csSessionValue = HttpContext.Session.GetString("csSession");
                                    if (csSessionValue != null)
                                    {
                                        var myObject = JsonSerializer.Deserialize<AccountDTO>(csSessionValue);

                                        
                                <form class="mb-5">

                                    <div class="form-outline mb-5">
                                        <input type="text" id="typeText" class="form-control form-control-lg" siez="17"
                                               value="@myObject.TelephoneNumber" minlength="19" maxlength="19" />
                                        <label class="form-label" for="typeText">Card Number</label>
                                    </div>

                                    <div class="form-outline mb-5">
                                        <input type="text" id="typeName" class="form-control form-control-lg" siez="17"
                                               value="@myObject.FullName" />
                                        <label class="form-label" for="typeName">Name on card</label>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-5">
                                            <div class="form-outline">
                                                <input type="text" id="typeExp" class="form-control form-control-lg" value="@DateTime.UtcNow"
                                                       size="7" id="exp" minlength="7" maxlength="7" />
                                                <label class="form-label" for="typeExp">DateTime CheckOut</label>
                                            </div>
                                        </div>
                                        
                                    </div>
                                    <p class="mb-5">
                                        Lorem ipsum dolor sit amet consectetur, adipisicing elit <a href="#!">obcaecati sapiente</a>.
                                    </p>

                                    <button type="button" class="btn btn-primary btn-block btn-lg">CheckOut</button>

                                    <h5 class="fw-bold mb-5" style="position: absolute; bottom: 0;">
                                        <a asp-page="/Test">Back to shopping</a>
                                    </h5>
                                </form>
                                }
                                }
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>